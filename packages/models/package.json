{
  "name": "@carolo/models",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build && tsc",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently --names \"swc,tsc\" \"npm run dev:build\" \"npm run dev:tsc\"",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@carolo/game": "*",
    "@sinclair/typebox": "0.26.8"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.46",
    "@types/node": "18.15.11",
    "concurrently": "8.0.1",
    "eslint": "8.37.0",
    "rimraf": "4.4.1",
    "typescript": "5.0.4"
  }
}
