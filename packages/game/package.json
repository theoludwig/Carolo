{
  "name": "@carolo/game",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "!**/*.test.js",
    "!**/*.test.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build && tsc",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently --names \"swc,tsc\" \"npm run dev:build\" \"npm run dev:tsc\"",
    "lint": "eslint ./src --max-warnings 0 --report-unused-disable-directives",
    "test": "cross-env NODE_ENV=test node --enable-source-maps --test build/"
  },
  "dependencies": {
    "immer": "10.0.2"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.70",
    "@types/node": "20.4.2",
    "concurrently": "8.2.0",
    "cross-env": "7.0.3",
    "eslint": "8.45.0",
    "rimraf": "5.0.1",
    "typescript": "5.1.6"
  }
}
