{
  "name": "@carolo/game",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build && tsc",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently --names \"swc,tsc\" \"npm run dev:build\" \"npm run dev:tsc\"",
    "lint": "eslint ./src"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.30",
    "@types/node": "18.11.18",
    "concurrently": "7.6.0",
    "eslint": "8.32.0",
    "rimraf": "4.1.2",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "immer": "9.0.19"
  }
}
