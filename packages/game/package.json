{
  "name": "@carolo/game",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build && tsc",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently --names \"swc,tsc\" \"npm run dev:build\" \"npm run dev:tsc\"",
    "lint": "eslint ./src",
    "test": "cross-env NODE_ENV=test c8 tap"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.35",
    "@types/node": "18.13.0",
    "@types/tap": "15.0.8",
    "c8": "7.12.0",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.33.0",
    "rimraf": "4.1.2",
    "tap": "16.3.4",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "immer": "9.0.19"
  }
}
