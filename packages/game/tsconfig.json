{
  "extends": "@carolo/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "noUncheckedIndexedAccess": false,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": ["node_modules", "build"]
}
