{
  "name": "@carolo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./build/*"
  },
  "scripts": {
    "build": "npm run prisma:generate && rimraf ./build && swc ./src --out-dir ./build && tsc",
    "start": "node build/index.js",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev": "concurrently --kill-others --names \"TypeScript,Node,Maildev,Prisma Studio\" \"npm run dev:build\" \"cross-env NODE_ENV=development nodemon build/index.js\" \"npm run maildev\" \"npm run prisma:studio\"",
    "maildev": "maildev",
    "scripts:generate-jwt-secret": "node ./build/scripts/generate-jwt-secret.js",
    "scripts:seed-games": "node ./build/scripts/seed-games.js",
    "lint:eslint": "eslint ./src",
    "lint": "npm run prisma:validate && npm run lint:eslint",
    "test": "cross-env NODE_ENV=test c8 tap",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --browser=none",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@carolo/game": "*",
    "@carolo/models": "*",
    "@fastify/cors": "8.2.1",
    "@fastify/helmet": "10.1.0",
    "@fastify/rate-limit": "8.0.0",
    "@fastify/sensible": "5.2.0",
    "@fastify/swagger": "8.3.1",
    "@fastify/swagger-ui": "1.6.0",
    "@prisma/client": "4.12.0",
    "@sinclair/typebox": "0.26.8",
    "axios": "1.3.4",
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.3",
    "ejs": "3.1.9",
    "fastify": "4.15.0",
    "fastify-plugin": "4.5.0",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.0",
    "ms": "2.1.3",
    "nodemailer": "6.9.1",
    "read-pkg": "7.1.0",
    "socket.io": "4.6.1"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.44",
    "@types/bcryptjs": "2.4.2",
    "@types/busboy": "1.5.0",
    "@types/ejs": "3.1.2",
    "@types/http-errors": "2.0.1",
    "@types/jsonwebtoken": "9.0.1",
    "@types/ms": "0.7.31",
    "@types/node": "18.15.11",
    "@types/nodemailer": "6.4.7",
    "@types/sinon": "10.0.13",
    "@types/tap": "15.0.8",
    "c8": "7.13.0",
    "concurrently": "8.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.37.0",
    "maildev": "2.0.5",
    "nodemon": "2.0.22",
    "prisma": "4.12.0",
    "rimraf": "4.4.1",
    "sinon": "15.0.3",
    "tap": "16.3.4",
    "typescript": "5.0.3"
  }
}
