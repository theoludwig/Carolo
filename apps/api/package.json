{
  "name": "@carolo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./build/*"
  },
  "scripts": {
    "build": "npm run prisma:generate && rimraf ./build && swc ./src --out-dir ./build && tsc",
    "start": "node --enable-source-maps build/index.js",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev": "concurrently --kill-others --names \"TypeScript,Node,Maildev,Prisma Studio\" \"npm run dev:build\" \"cross-env NODE_ENV=development node --watch --enable-source-maps build/index.js\" \"npm run maildev\" \"npm run prisma:studio\"",
    "maildev": "maildev",
    "scripts:generate-jwt-secret": "node --enable-source-maps ./build/scripts/generate-jwt-secret.js",
    "scripts:seed-games": "node --enable-source-maps ./build/scripts/seed-games.js",
    "lint:eslint": "eslint ./src --max-warnings 0 --report-unused-disable-directives",
    "lint": "npm run prisma:validate && npm run lint:eslint",
    "test": "cross-env NODE_ENV=test node --enable-source-maps --test build/",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --browser=none",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@carolo/game": "*",
    "@carolo/models": "*",
    "@fastify/cors": "8.4.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "8.0.3",
    "@fastify/sensible": "5.5.0",
    "@fastify/swagger": "8.12.0",
    "@fastify/swagger-ui": "1.10.1",
    "@prisma/client": "5.4.2",
    "@sinclair/typebox": "0.31.18",
    "axios": "1.5.1",
    "bcryptjs": "2.4.3",
    "dotenv": "16.3.1",
    "ejs": "3.1.9",
    "fastify": "4.24.3",
    "fastify-plugin": "4.5.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.2",
    "ms": "2.1.3",
    "nodemailer": "6.9.7",
    "read-pkg": "8.1.0",
    "socket.io": "4.7.2"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.94",
    "@types/bcryptjs": "2.4.5",
    "@types/busboy": "1.5.2",
    "@types/ejs": "3.1.4",
    "@types/http-errors": "2.0.3",
    "@types/jsonwebtoken": "9.0.4",
    "@types/ms": "0.7.33",
    "@types/node": "20.8.7",
    "@types/nodemailer": "6.4.13",
    "@types/sinon": "10.0.20",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "eslint": "8.52.0",
    "maildev": "2.1.0",
    "prisma": "5.4.2",
    "rimraf": "5.0.5",
    "sinon": "17.0.0",
    "typescript": "5.2.2"
  }
}
