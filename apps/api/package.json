{
  "name": "@carolo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./build/*"
  },
  "scripts": {
    "build": "npm run prisma:generate && rimraf ./build && swc ./src --out-dir ./build && tsc",
    "start": "node build/index.js",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev": "concurrently --kill-others --names \"TypeScript,Node,Maildev,Prisma Studio\" \"npm run dev:build\" \"cross-env NODE_ENV=development nodemon build/index.js\" \"npm run maildev\" \"npm run prisma:studio\"",
    "maildev": "maildev",
    "generate:jwt-secret": "node ./build/scripts/generate-jwt-secret.js",
    "lint:eslint": "eslint ./src",
    "lint": "npm run prisma:validate && npm run lint:eslint",
    "test": "cross-env NODE_ENV=test c8 tap",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --browser=none",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@carolo/models": "*",
    "@fastify/cors": "8.2.0",
    "@fastify/helmet": "10.1.0",
    "@fastify/rate-limit": "7.6.0",
    "@fastify/sensible": "5.2.0",
    "@fastify/swagger": "8.3.1",
    "@fastify/swagger-ui": "1.4.0",
    "@prisma/client": "4.10.1",
    "@sinclair/typebox": "0.25.23",
    "@thream/socketio-jwt": "3.0.2",
    "axios": "1.3.3",
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.3",
    "ejs": "3.1.8",
    "fastify": "4.13.0",
    "fastify-plugin": "4.5.0",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.0",
    "ms": "2.1.3",
    "nodemailer": "6.9.1",
    "read-pkg": "7.1.0",
    "socket.io": "4.6.0"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "*",
    "@carolo/tsconfig": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.35",
    "@types/bcryptjs": "2.4.2",
    "@types/busboy": "1.5.0",
    "@types/ejs": "3.1.2",
    "@types/http-errors": "2.0.1",
    "@types/jsonwebtoken": "9.0.1",
    "@types/ms": "0.7.31",
    "@types/node": "18.13.0",
    "@types/nodemailer": "6.4.7",
    "@types/sinon": "10.0.13",
    "@types/tap": "15.0.8",
    "c8": "7.13.0",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.34.0",
    "maildev": "2.0.5",
    "nodemon": "2.0.20",
    "prisma": "4.10.1",
    "rimraf": "4.1.2",
    "sinon": "15.0.1",
    "tap": "16.3.4",
    "typescript": "4.9.5"
  }
}
