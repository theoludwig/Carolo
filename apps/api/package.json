{
  "name": "@carolo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./build/*"
  },
  "scripts": {
    "build": "pnpm run prisma:generate && rimraf ./build && swc ./src --out-dir ./build && tsc",
    "start": "node --enable-source-maps build/index.js",
    "dev:build": "swc ./src --out-dir ./build --watch",
    "dev": "concurrently --kill-others --names \"TypeScript,Node,Maildev,Prisma Studio\" \"pnpm run dev:build\" \"cross-env NODE_ENV=development node --watch --enable-source-maps build/index.js\" \"pnpm run maildev\" \"pnpm run prisma:studio\"",
    "maildev": "maildev",
    "scripts:generate-jwt-secret": "node --enable-source-maps ./build/scripts/generate-jwt-secret.js",
    "scripts:seed-games": "node --enable-source-maps ./build/scripts/seed-games.js",
    "lint:eslint": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint": "pnpm run prisma:validate && pnpm run lint:eslint",
    "test": "cross-env NODE_ENV=test node --enable-source-maps --test build/",
    "prisma:validate": "prisma validate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --browser=none",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@carolo/game": "workspace:*",
    "@carolo/models": "workspace:*",
    "@fastify/cors": "8.5.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "9.0.1",
    "@fastify/sensible": "5.5.0",
    "@fastify/swagger": "8.12.2",
    "@fastify/swagger-ui": "2.0.1",
    "@prisma/client": "5.7.1",
    "@sinclair/typebox": "0.32.3",
    "axios": "1.6.2",
    "bcryptjs": "2.4.3",
    "dotenv": "16.3.1",
    "ejs": "3.1.9",
    "fastify": "4.25.2",
    "fastify-plugin": "4.5.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.2",
    "ms": "2.1.3",
    "nodemailer": "6.9.7",
    "read-pkg": "9.0.1",
    "socket.io": "4.7.2"
  },
  "devDependencies": {
    "@carolo/eslint-config-custom": "workspace:*",
    "@carolo/tsconfig": "workspace:*",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.101",
    "@types/bcryptjs": "2.4.6",
    "@types/busboy": "1.5.3",
    "@types/ejs": "3.1.5",
    "@types/http-errors": "2.0.4",
    "@types/jsonwebtoken": "9.0.5",
    "@types/ms": "0.7.34",
    "@types/node": "20.10.5",
    "@types/nodemailer": "6.4.14",
    "@types/sinon": "17.0.2",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "maildev": "2.1.0",
    "prisma": "5.7.1",
    "rimraf": "5.0.5",
    "sinon": "17.0.1",
    "typescript": "5.3.3"
  }
}
