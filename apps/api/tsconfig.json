{
  "extends": "@carolo/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "checkJs": false
  },
  "exclude": ["node_modules", "build"]
}
