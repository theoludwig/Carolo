{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
